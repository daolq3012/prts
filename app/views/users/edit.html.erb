<div class="col-md-6 col-md-offset-3">
  <h2 class="text-center">Update your information</h2>

  <%= form_for @user do |f| %>
    <% if update_chatwork? %>
      <div class="form-group">
        <%= f.label :chatwork_id %>
        <%= f.text_field :chatwork_id, class: "form-control", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :chatwork_room_id %>
        <%= f.text_field :chatwork_room_id, class: "form-control", required: true %>
      </div>
    <% else %>
      <div class="form-group">
        <%= f.label :current_password %>
        <%= f.password_field :current_password, class: "form-control", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password, "New Password" %>
        <%= f.password_field :password, class: "form-control", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirmation New Password", required: true %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    <% end %>

    <%= f.submit "Change", class: "btn btn-primary" %>
  <% end %>
</div>

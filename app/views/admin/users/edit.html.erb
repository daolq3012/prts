<% provide :title, "Edit User" %>

<div class="col-md-6 col-md-offset-3">
  <div>
    <%= link_to admin_users_path, class: "btn btn-info btn-xs", title: "Go back" do %>
      <span class="glyphicon glyphicon-arrow-left"></span> Go back
    <% end %>

    <%= link_to admin_user_path(@user), class: "btn btn-default btn-xs pull-right", title: "View user" do %>
      <span class="glyphicon glyphicon-eye-open"></span>
    <% end %>
  </div>
  <h2 class="text-center">Edit User</h2>

  <%= form_for [:admin, @user] do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :role %>
      <div class="role-select">
        <%= f.select :role, options_for_select(User.roles.keys, @user.role), {},
          class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.submit "Update", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

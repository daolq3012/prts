<div class="col-md-12">
  <h2 class="text-center">List of your pull requests</h2>
  <p class="amount">Number of items: <%= @pull_requests_size %></p>

  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>URL</th>
        <th>Status</th>
        <th>Created At</th>
        <th>Updated At</th>
      </tr>
    </thead>
    <tbody>
      <% if @pull_requests.any? %>
        <% @pull_requests.each_with_index do |pull_request, index| %>
          <tr>
            <td>
              <% params[:page] ||= "1" %>
              <%= index_for params[:page], index, Settings.pull_request.per_page %>
            </td>
            <td>
              <% url = pull_request.url + "/files" %>
              <%= link_to url, url, target: "_blank" %>
            </td>
            <td>
              <span class="<%= pull_request.status %>"><%= pull_request.status %></span>
            </td>
            <td><%= l pull_request.created_at, format: :long %></td>
            <td><%= l pull_request.updated_at, format: :long %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= paginate @pull_requests, theme: "twitter-bootstrap-4" %>
  </div>
</div>
